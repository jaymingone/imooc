extends ../layout
block content
	.container
		.row
			each item in movies
				clo-md-2
					thumbnail
						a(herf="/movies/#{item._id}")
							img(src="#{item.poster}",alt="#{item.title}")
						caption
							h3 #{title}
							h:a.btn.btn-primary(herf="/movies/#{item._id}",role="button")
							电影预告片
